]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Plot border index heatmap\n",
    "def plot_border_index_heatmap(n_points=50):\n",
    "    # Create grid\n",
    "    x_range = np.linspace(-2, 3, n_points)\n",
    "    y_range = np.linspace(-2, 2, n_points)\n",
    "    X, Y = np.meshgrid(x_range, y_range)\n",
    "    \n",
    "    # Compute border index contribution at each point\n",
    "    Z = np.zeros_like(X)\n",
    "    \n",
    "    for i in range(n_points):\n",
    "        for j in range(n_points):\n",
    "            x_val = X[i, j]\n",
    "            y_val = Y[i, j]\n",
    "            \n",
    "            # Check if in overlap region\n",
    "            in_chart1 = x_val**2 + y_val**2 < 4\n",
    "            in_chart2 = (x_val-1)**2 + y_val**2 < 4\n",
    "            \n",
    "            if in_chart1 and in_chart2:\n",
    "                # Compute contribution (simplified)\n",
    "                # Higher contribution where x ‚â† 0 (structure mismatch)\n",
    "                Z[i, j] = abs(x_val) * np.exp(-(x_val**2 + y_val**2)/4)\n",
    "    \n",
    "    # Plot heatmap\n",
    "    fig, ax = plt.subplots(figsize=(10, 8))\n",
    "    \n",
    "    im = ax.contourf(X, Y, Z, levels=20, cmap='hot')\n",
    "    plt.colorbar(im, ax=ax, label='Border Index Density')\n",
    "    \n",
    "    # Add chart boundaries\n",
    "    theta = np.linspace(0, 2*np.pi, 100)\n",
    "    ax.plot(2*np.cos(theta), 2*np.sin(theta), 'b-', linewidth=2, label='Chart U‚ÇÅ')\n",
    "    ax.plot(1 + 2*np.cos(theta), 2*np.sin(theta), 'r-', linewidth=2, label='Chart U‚ÇÇ')\n",
    "    \n",
    "    ax.set_xlabel('x')\n",
    "    ax.set_ylabel('y')\n",
    "    ax.set_title('Border Index Distribution\\n(Higher values indicate stronger obstruction)')\n",
    "    ax.legend()\n",
    "    ax.axis('equal')\n",
    "    ax.grid(True, alpha=0.3)\n",
    "    \n",
    "    plt.show()\n",
    "\n",
    "plot_border_index_heatmap()"
   ]
  },
