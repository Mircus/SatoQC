    "## 9. Performance Testing <a id='perf'></a>"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Performance benchmark\n",
    "def benchmark_computation(n_points_list=[10, 50, 100, 200]):\n",
    "    times = []\n",
    "    \n",
    "    for n_points in n_points_list:\n",
    "        # Generate test points\n",
    "        test_pts = [np.random.randn(4) for _ in range(n_points)]\n",
    "        \n",
    "        start_time = time.time()\n",
    "        \n",
    "        # Compute jumps\n",
    "        jumps = []\n",
    "        for pt in test_pts:\n",
    "            val1 = hf1.boundary_value(pt)\n",
    "            val2 = hf2.boundary_value(pt)\n",
    "            jumps.append(val1 - val2)\n",
    "        \n",
    "        # Compute wavefronts (simplified)\n",
    "        wfs = []\n",
    "        for pt, jump in zip(test_pts, jumps):\n",
    "            wf = compute_wavefront_demo(jump, pt, True)\n",
    "            wfs.append(wf)\n",
    "        \n",
    "        # Compute border index\n",
    "        bi = compute_border_index_demo(test_pts, jumps, wfs)\n",
    "        \n",
    "        elapsed = time.time() - start_time\n",
    "        times.append(elapsed)\n",
    "        \n",
    "        print(f\"n_points = {n_points:3d}: {elapsed:.4f} seconds (BI = {bi:.6f})\")\n",
    "    \n",
    "    return n_points_list, times\n",
    "\n",
    "n_points_list, times = benchmark_computation()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Plot scaling behavior\n",
    "fig, ax = plt.subplots(figsize=(10, 6))\n",
    "\n",
    "ax.loglog(n_points_list, times, 'bo-', label='Actual time', markersize=8)\n",
    "\n",
    "# Fit power law\n",
    "coeffs = np.polyfit(np.log(n_points_list), np.log(times), 1)\n",
    "fitted = np.exp(coeffs[1]) * np.array(n_points_list)**coeffs[0]\n",
    "ax.loglog(n_points_list, fitted, 'r--', label=f'Fit: O(n^{coeffs[0]:.2f})')\n",
    "\n",
    "ax.set_xlabel('Number of test points')\n",
    "ax.set_ylabel('Computation time (seconds)')\n",
    "ax.set_title('SatoQC Performance Scaling')\n",
    "ax.legend()\n",
    "ax.grid(True, which=\"both\", alpha=0.3)\n",
    "\n",
    "print(f\"\\nScaling exponent: {coeffs[0]:.3f}\")\n",
    "print(f\"Expected: ~1.2 for O(n log n) with overhead\")\n",
    "\n",
    "plt.show()"
