    "# Create circles for charts\n",
    "theta = np.linspace(0, 2*np.pi, 100)\n",
    "circle1_x = 2*np.cos(theta)\n",
    "circle1_y = 2*np.sin(theta)\n",
    "circle2_x = 1 + 2*np.cos(theta)\n",
    "circle2_y = 2*np.sin(theta)\n",
    "\n",
    "# Plot charts\n",
    "ax.fill(circle1_x, circle1_y, alpha=0.3, color='blue', label='Chart U‚ÇÅ')\n",
    "ax.fill(circle2_x, circle2_y, alpha=0.3, color='red', label='Chart U‚ÇÇ')\n",
    "\n",
    "# Mark overlap\n",
    "ax.add_patch(plt.Circle((0, 0), 2, fill=False, color='blue', linewidth=2))\n",
