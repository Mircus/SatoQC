    "## 8. Visualization and Analysis <a id='viz'></a>"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Visualize wavefront cone in 3D\n",
    "def plot_wavefront_cone_3d(wf_cone):\n",
    "    fig = plt.figure(figsize=(10, 8))\n",
    "    ax = fig.add_subplot(111, projection='3d')\n",
    "    \n",
    "    # Plot base point\n",
    "    base = wf_cone.base_point[:3] if len(wf_cone.base_point) >= 3 else \\\n",
    "           np.pad(wf_cone.base_point, (0, 3-len(wf_cone.base_point)))\n",
    "    ax.scatter(*base, color='red', s=100, marker='o', label='Base point')\n",
    "    \n",
    "    # Plot cone directions\n",
    "    for i, direction in enumerate(wf_cone.directions[:3]):  # Show first 3 directions\n",
    "        dir_3d = direction[:3] if len(direction) >= 3 else \\\n",
    "                 np.pad(direction, (0, 3-len(direction)))\n",
    "        scaled_dir = dir_3d * 0.5\n",
    "        ax.quiver(base[0], base[1], base[2],\n",
    "                 scaled_dir[0], scaled_dir[1], scaled_dir[2],\n",
    "                 color='blue', alpha=0.6, arrow_length_ratio=0.2)\n",
    "    \n",
    "    # Draw cone surface (simplified)\n",
    "    if wf_cone.cone_angle > 0 and len(wf_cone.directions) > 0:\n",
    "        u = np.linspace(0, 2 * np.pi, 20)\n",
    "        v = np.linspace(0, wf_cone.cone_angle, 10)\n",
    "        \n",
    "        x = np.outer(np.sin(v), np.cos(u)) * 0.3\n",
    "        y = np.outer(np.sin(v), np.sin(u)) * 0.3\n",
    "        z = np.outer(np.cos(v), np.ones(np.size(u))) * 0.3\n",
    "        \n",
    "        x += base[0]\n",
    "        y += base[1]\n",
    "        z += base[2]\n",
    "        \n",
    "        ax.plot_surface(x, y, z, alpha=0.2, color='cyan')\n",
    "    \n",
    "    ax.set_xlabel('X')\n",
    "    ax.set_ylabel('Y')\n",
    "    ax.set_zlabel('Z')\n",
    "    ax.set_title(f'Wavefront Cone ({wf_cone.singularity_type.value})\\nCone angle: {wf_cone.cone_angle:.2f} rad')\n",
    "    ax.legend()\n",
    "    \n",
    "    plt.show()\n",
    "\n",
    "# Create and plot a sample wavefront cone\n",
    "sample_wf = WavefrontCone(\n",
    "    base_point=np.array([0.5, 0.0, 0.0, 0.0]),\n",
    "    directions=[\n",
    "        np.array([0, 0, 1, 0]),\n",
    "        np.array([0.5, 0, 0.866, 0]),\n",
    "        np.array([-0.5, 0, 0.866, 0])\n",
    "    ],\n",
    "    cone_angle=np.pi/6,\n",
    "    singularity_type=WavefrontType.FOLD\n",
    ")\n",
    "\n",
    "plot_wavefront_cone_3d(sample_wf)"
