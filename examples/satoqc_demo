    "## Advanced Analysis: Spectral Methods"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "def spectral_analysis(J_matrix, test_points):\n",
    "    \"\"\"\n",
    "    Compute spectral invariants of the ‚àÇÃÑ_J operator\n",
    "    \"\"\"\n",
    "    n_points = len(test_points)\n",
    "    dim = 4\n",
    "    \n",
    "    # Build discrete ‚àÇÃÑ_J operator matrix\n",
    "    dbar_matrix = np.zeros((n_points * dim, n_points * dim), dtype=complex)\n",
    "    \n",
    "    for i, point in enumerate(test_points):\n",
    "        # Evaluate J at point\n",
    "        subs_dict = dict(zip(coordinates, point))\n",
    "        J_at_point = np.array(J_matrix.subs(subs_dict)).astype(float)\n",
    "        \n",
    "        # ‚àÇÃÑ_J = 1/2(‚àÇ + iJ‚àÇ)\n",
    "        block = (np.eye(dim) + 1j * J_at_point) / 2\n",
    "        \n",
    "        idx_start = i * dim\n",
    "        idx_end = (i + 1) * dim\n",
    "        dbar_matrix[idx_start:idx_end, idx_start:idx_end] = block\n",
    "    \n",
    "    # Compute eigenvalues\n",
    "    eigenvalues = np.linalg.eigvals(dbar_matrix)\n",
    "    \n",
    "    # Compute spectral invariants\n",
    "    spectral_gap = np.min(np.abs(eigenvalues[np.abs(eigenvalues) > 1e-10])) if np.any(np.abs(eigenvalues) > 1e-10) else 0\n",
    "    kernel_dim = np.sum(np.abs(eigenvalues) < 1e-10)\n",
    "    \n",
    "    return {\n",
    "        'eigenvalues': eigenvalues,\n",
    "        'spectral_gap': spectral_gap,\n",
    "        'kernel_dimension': kernel_dim,\n",
    "        'condition_number': np.linalg.cond(dbar_matrix)\n",
    "    }\n",
    "\n",
    "# Perform spectral analysis\n",
    "test_pts_spectral = [np.random.randn(4) * 0.5 for _ in range(10)]\n",
    "spectral_data = spectral_analysis(J_matrix, test_pts_spectral)\n",
    "\n",
    "print(\"Spectral Analysis of ‚àÇÃÑ_J operator:\")\n",
    "print(f\"  Spectral gap: {spectral_data['spectral_gap']:.6f}\")\n",
    "print(f\"  Kernel dimension: {spectral_data['kernel_dimension']}\")\n",
    "print(f\"  Condition number: {spectral_data['condition_number']:.2e}\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Plot eigenvalue distribution\n",
    "fig, ax = plt.subplots(figsize=(8, 8))\n",
    "\n",
    "eigenvals = spectral_data['eigenvalues']\n",
    "ax.scatter(eigenvals.real, eigenvals.imag, alpha=0.6, s=50)\n",
    "ax.axhline(y=0, color='k', linestyle='-', alpha=0.3)\n",
    "ax.axvline(x=0, color='k', linestyle='-', alpha=0.3)\n",
    "\n",
    "# Mark spectral gap\n",
    "if spectral_data['spectral_gap'] > 0:\n",
    "    circle = plt.Circle((0, 0), spectral_data['spectral_gap'], \n",
    "                       fill=False, color='red', linestyle='--', linewidth=2)\n",
    "    ax.add_patch(circle)\n",
    "\n",
    "ax.set_xlabel('Re(Œª)')\n",
    "ax.set_ylabel('Im(Œª)')\n",
    "ax.set_title('Spectrum of ‚àÇÃÑ_J Operator\\n(Red circle shows spectral gap)')\n",
    "ax.grid(True, alpha=0.3)\n",
    "ax.set_aspect('equal')\n",
    "ax.set_xlim(-2, 2)\n",
    "ax.set_ylim(-2, 2)\n",
    "\n",
    "plt.show()"
   ]
