  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Compute ŒîJ = J‚ÇÅ - J‚ÇÇ\n",
    "delta_J = J_matrix - J2_matrix\n",
    "print(\"Structure mismatch ŒîJ = J‚ÇÅ - J‚ÇÇ:\")\n",
    "sp.pprint(delta_J)\n",
    "\n",
    "# Identify non-zero components\n",
    "print(\"\\nNon-zero components:\")\n",
    "for i in range(4):\n",
    "    for j in range(4):\n",
    "        if delta_J[i,j] != 0:\n",
    "            coord_names = ['x', 'y', 'u', 'v']\n",
    "            print(f\"  ŒîJ[{i},{j}] = {delta_J[i,j]} ‚Üí {coord_names[i]}-direction affected by {coord_names[j]}\")"
   ]
