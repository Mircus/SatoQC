    "def create_summary_dashboard(structure_name, J_matrix, test_results):\n",
    "    \"\"\"\n",
    "    Create a comprehensive summary dashboard\n",
    "    \"\"\"\n",
    "    fig = plt.figure(figsize=(15, 10))\n",
    "    \n",
    "    # Create grid\n",
    "    gs = fig.add_gridspec(3, 3, hspace=0.3, wspace=0.3)\n",
    "    \n",
    "    # Title\n",
    "    fig.suptitle(f'SatoQC Analysis Summary: {structure_name}', fontsize=16, fontweight='bold')\n",
    "    \n",
    "    # 1. Structure visualization (top left)\n",
    "    ax1 = fig.add_subplot(gs[0, 0])\n",
    "    J_display = np.array(J_matrix.subs(dict(zip(coordinates, [0.5, 0, 0, 0])))).astype(float)\n",
    "    im1 = ax1.imshow(J_display, cmap='RdBu', vmin=-1, vmax=1)\n",
    "    ax1.set_title('J Matrix at (0.5,0,0,0)')\n",
    "    ax1.set_xlabel('j')\n",
    "    ax1.set_ylabel('i')\n",
    "    plt.colorbar(im1, ax=ax1)\n",
    "    \n",
    "    # 2. Border index plot (top middle)\n",
    "    ax2 = fig.add_subplot(gs[0, 1])\n",
    "    x_vals = np.linspace(-1, 2, 50)\n",
    "    border_vals = np.abs(x_vals) * np.exp(-x_vals**2/2)  # Simplified\n",
    "    ax2.plot(x_vals, border_vals, 'b-', linewidth=2)\n",
    "    ax2.fill_between(x_vals, 0, border_vals, alpha=0.3)\n",
    "    ax2.set_title('Border Index Profile')\n",
    "    ax2.set_xlabel('x coordinate')\n",
    "    ax2.set_ylabel('BI contribution')\n",
    "    ax2.grid(True, alpha=0.3)\n",
    "    \n",
